        <ul class="nav navbar-nav">
          <li><a href="/home">Home</a></li>
          <li>
            <a href="/about">About</a>
          </li>
          <li>
            <a href="/contact">Contact</a>
          </li>
        </ul>
        <ul class="navbar-right nav navbar-nav">
          {{#if user}}
          <li>
            <a href="#"> {{user.name}} </a>
          </li>
          {{else}}
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
